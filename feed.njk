---
permalink: /feed.xml
eleventyExcludeFromCollections: true
---
<?xml version="1.0" encoding="UTF-8"?>
<rss version="2.0" xmlns:content="http://purl.org/rss/1.0/modules/content/">
    <channel>
        <title>Jon Plummer</title>
        <link>https://jonplummer.com</link>
        <description>Today I Learned - Personal blog about work, life, and learning</description>
        <language>en-US</language>
        <lastBuildDate>{{ collections.post | first }} GMT</lastBuildDate>

        {% for item in collections.post | reverse | limit(20) | mergePostsAndLinks(links) %}
        <item>
            {% if item.type == 'post' %}
                <title>{{ item.data.data.title | safe }}</title>
                <link>{{ item.data.url | absoluteUrl }}</link>
                <guid>{{ item.data.url | absoluteUrl }}</guid>
                <pubDate>{{ item.data.date }} GMT</pubDate>

                {# Full post content #}
                <content:encoded><![CDATA[{{ item.data.templateContent | safe }}]]></content:encoded>

                {# Post excerpt for compatibility #}
                <description><![CDATA[{{ item.data.data.excerpt | default(item.data.templateContent | truncate(300)) | safe }}]]></description>

                {# Categories/tags if you have them #}
                {% if item.data.data.tags %}
                <category>{{ item.data.data.tags | join(', ') }}</category>
                {% endif %}
            {% elif item.type == 'links' %}
                <title>Remaindered Links</title>
                <link>{{ page.url | absoluteUrl }}</link>
                <guid>{{ page.url | absoluteUrl }}#links-{{ item.date | dateToRfc3339 }}</guid>
                <pubDate>{{ item.date }} GMT</pubDate>

                {# Links content #}
                <content:encoded><![CDATA[<ul>{% for link in item.data %}<li><a href="{{ link.url }}">{{ link.title }}</a>{% if link.description %} - {{ link.description }}{% endif %}</li>{% endfor %}</ul>]]></content:encoded>

                <description><![CDATA[<ul>{% for link in item.data %}<li><a href="{{ link.url }}">{{ link.title }}</a>{% if link.description %} - {{ link.description }}{% endif %}</li>{% endfor %}</ul>]]></description>
            {% endif %}
        </item>
        {% endfor %}
    </channel>
</rss>