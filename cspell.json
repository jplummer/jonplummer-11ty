{
  "version": "0.2",
  "language": "en",
  "dictionaryDefinitions": [
    {
      "name": "custom-words",
      "path": "./cspell-custom-words.txt",
      "addWords": true
    }
  ],
  "dictionaries": [
    "en",
    "en_US",
    "custom-words"
  ],
  "ignorePaths": [
    "node_modules/**",
    "_site/**",
    ".git/**",
    "package-lock.json",
    "pnpm-lock.yaml",
    "CHANGELOG.md",
    "docs/reference/**"
  ],
  "ignoreRegExpList": [
    "/\\[([^\\]]+)\\]\\([^\\)]+\\)/g",
    "/https?:\\/\\/[^\\s]+/g",
    "/www\\.[^\\s]+/g",
    "/\\b[a-z0-9](?:[a-z0-9-]{0,61}[a-z0-9])?(?:\\.[a-z0-9](?:[a-z0-9-]{0,61}[a-z0-9])?)*\\.[a-z]{2,}\\b/gi",
    "/#\\w+/g",
    "/{%[^%]+%}/g",
    "/^[a-z]+:\\s*\\/[^\\n]+$/gm",
    "/^[a-z]+:\\s*[^\\n]*\\/[^\\n]*\\.(png|jpg|jpeg|gif|svg|webp|pdf|mp4|webm|ogg)$/gmi",
    "/^slug:\\s*[^\\n]+$/gmi",
    "/:\\s*\"[^\"]*\"/g",
    "/:\\s*'(?:[^']|'')*'/g",
    "/\\b\\w+''[a-z]+\\b/g"
  ],
  "flagWords": [],
  "enableFiletypes": [
    "markdown",
    "yaml"
  ],
  "checkLimit": 500,
  "suggestions": false
}

