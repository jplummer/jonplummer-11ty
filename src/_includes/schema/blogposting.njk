<script type="application/ld+json">
{
  "@context": "https://schema.org",
  "@type": "BlogPosting",
  "headline": "{{ post.data.title | safe }}",
  "datePublished": "{{ post.date | dateToRfc3339 }}",
  "dateModified": "{{ post.date | dateToRfc3339 }}",
  "author": {
    "@type": "Person",
    "name": "Jon Plummer",
    "url": "{{ site.url }}/about/"
  },
  "publisher": {
    "@type": "Person",
    "name": "Jon Plummer",
    "url": "{{ site.url }}"
  },
  "mainEntityOfPage": {
    "@type": "WebPage",
    "@id": "{{ site.url }}{{ post.url }}"
  },
  "url": "{{ site.url }}{{ post.url }}",
  "description": "{{ description | default(post.data.title) | safe }}"
}
</script>

