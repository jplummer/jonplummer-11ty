{# This template is the basis of all templates #}
<!DOCTYPE html>
<html lang="en-US">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link media="screen" rel="stylesheet" type="text/css" href="/assets/css/jonplummer.css">

    <meta name="robots" content="max-image-preview:large">

    <link rel="profile" href="http://gmpg.org/xfn/11">
    <link rel="me" href="https://mas.to/@jplummer">
    <link rel="me" href="https://bsky.app/profile/jonplummer.com">
    <link rel="canonical" href="{{ site.url }}{{ page.url }}">
    <link rel="alternate" type="application/rss+xml" title="Jon Plummer: Today I Learned: Posts" href="/feed.xml">
    <link rel="alternate" type="application/rss+xml" title="Jon Plummer: Today I Learned: Links" href="/links-feed.xml">

    <title>{{ title | default('Jon Plummer – Today I Learned') }}</title>

    <link rel="icon" href="/assets/images/2021/02/jp_round-48x48.jpg" sizes="32x32">
    <link rel="icon" href="/assets/images/2021/02/jp_round.jpg" sizes="192x192">
    <link rel="apple-touch-icon" href="/assets/images/2021/02/jp_round-180x180.jpg">
    <meta name="msapplication-TileImage" content="/assets/images/2021/02/jp_round.jpg">

    <meta name="description" content="{% if pagination and pagination.pageNumber > 0 %}Page {{ pagination.pageNumber }} of Jon Plummer's UX design blog. Insights on design leadership, product development, and team management.{% else %}{{ description | default('Jon Plummer is a UX design leader and mentor. Read his thoughts on design, leadership, and product development.') }}{% endif %}">
    <meta name="generator" content="11ty">

    <meta property="og:locale" content="en_US">
    <meta property="og:site_name" content="Jon Plummer">
    <meta property="og:title" content="{{ title | default('Jon Plummer – Today I Learned') }}">
    <meta property="og:url" content="{{ site.url }}{{ page.url }}">
    <meta property="og:type" content="{% if tags and 'post' in tags %}article{% else %}website{% endif %}">
    <meta property="og:description" content="{% if pagination and pagination.pageNumber > 0 %}Page {{ pagination.pageNumber }} of Jon Plummer's UX design blog. Insights on design leadership, product development, and team management.{% else %}{{ description | default('Jon Plummer is a UX design leader and mentor. Read his thoughts on design, leadership, and product development.') }}{% endif %}">
    {% set ogImageUrl = ogImage | default('/assets/images/2021/05/og-image.png') %}
    <meta property="og:image" content="{{ site.url }}{{ ogImageUrl }}">
    <meta property="og:image:url" content="{{ site.url }}{{ ogImageUrl }}">
    <meta property="og:image:secure_url" content="{{ site.url }}{{ ogImageUrl }}">
    <meta property="og:image:width" content="1200">
    <meta property="og:image:height" content="630">
    <meta property="og:image:alt" content="{% if pagination and pagination.pageNumber > 0 %}Page {{ pagination.pageNumber }} of Jon Plummer's UX design blog{% else %}{{ title | default('Jon Plummer – Today I Learned') }}{% if description %} - {{ description }}{% endif %}{% endif %}">
    {% if tags and 'post' in tags and date %}
      <meta property="article:published_time" content="{{ date | dateToRfc3339Safe }}">
      <meta property="article:author" content="Jon Plummer">
      <meta property="article:section" content="Blog">
      {% if tags %}
        {% for tag in tags %}
          {% if tag != 'post' %}
            <meta property="article:tag" content="{{ tag }}">
          {% endif %}
        {% endfor %}
      {% endif %}
    {% endif %}

    {# Schema.org structured data #}
    {% if page.url == "/about/" %}
      {% include "schema/person.njk" %}
    {% elif page.url == "/" or page.url == "/index.html" %}
      {% include "schema/website.njk" %}
    {% elif tags and "post" in tags and date and title and page.url != "/" %}
      {# BlogPosting schema for individual post pages #}
      <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "BlogPosting",
        "headline": {{ title | json | safe }},
        "datePublished": "{{ date | dateToRfc3339Safe }}",
        "dateModified": "{{ date | dateToRfc3339Safe }}",
        "author": {
          "@type": "Person",
          "name": "Jon Plummer",
          "url": "{{ site.url }}/about/"
        },
        "publisher": {
          "@type": "Person",
          "name": "Jon Plummer",
          "url": "{{ site.url }}"
        },
        "mainEntityOfPage": {
          "@type": "WebPage",
          "@id": "{{ site.url }}{{ page.url }}"
        },
        "url": "{{ site.url }}{{ page.url }}",
        "description": {{ description | default(title) | json | safe }},
        "image": "{{ site.url }}{{ ogImageUrl }}"
      }
      </script>
    {% endif %}

</head>

<body>
<header>
    <a class="skip" href="#main">Skip to content</a>
    <hgroup>
        <h1><a href="/" rel="home">Jon Plummer</a></h1>
        <p>Today I Learned</p>
    </hgroup>
    {% include "nav.njk" %}
</header>

<main id="main" aria-label="Main content"{% if tags %} data-tags="{{ tags | join(' ') }}"{% endif %}>
    {% if tags and "page" in tags and title %}
    <h1>{{ title }}</h1>
    {% endif %}
    {{ content | safe }}
</main>

<footer aria-label="Site footer">
    {% include "license.njk" %}
</footer>
</body>
</html>