<meta property="og:title" content="{{ ogTitleValue }}">
<meta property="og:url" content="{{ site.url }}{{ page.url }}">
<meta property="og:type" content="{% if tags and 'post' in tags %}article{% else %}website{% endif %}">
<meta property="og:description" content="{{ computedDescriptionValue }}">
<meta property="og:image" content="{{ site.url }}{{ ogImageUrl }}">
<meta property="og:image:width" content="1200">
<meta property="og:image:height" content="630">
<meta property="og:image:alt" content="{{ ogImageAltValue }}">
{%- if tags and 'post' in tags and date %}
<meta property="article:published_time" content="{{ date | dateToRfc3339 }}">
<meta property="article:author" content="Jon Plummer">
<meta property="article:section" content="Blog">
{%- if tags %}
{%- for tag in tags %}
{%- if tag != 'post' %}
<meta property="article:tag" content="{{ tag }}">
{%- endif %}
{%- endfor %}
{%- endif %}
{%- endif %}