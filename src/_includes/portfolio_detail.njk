---
layout: base.njk
purpose: individual portfolio page
---

<article class="portfolio-detail">
    <header>
        <h1>{{ title }}</h1>
    </header>
    <section>
        {{ content | safe }}
    </section>
</article>

<nav class="post-navigation" aria-label="Portfolio navigation">
    {% set previousPost = collections.portfolio | getPreviousCollectionItem(page) %}
    {% set nextPost = collections.portfolio | getNextCollectionItem(page) %}
    {% if previousPost %}
    <a href="{{ previousPost.url }}" class="prev">← Previous project: {{ previousPost.data.title }}</a>
    {% endif %}

    {% if nextPost %}
    <a href="{{ nextPost.url }}" class="next">Next project: {{ nextPost.data.title }} →</a>
    {% endif %}
</nav>
