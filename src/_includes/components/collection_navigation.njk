{# purpose: navigation between items in a collection #}
{# Parameters:
   - collection: the collection to navigate (e.g., collections.post, collections.portfolio)
   - currentPage: the current page object
   - itemLabel: label for the item type (e.g., "post", "project")
   - navLabel: aria-label for the navigation (e.g., "Post navigation", "Portfolio navigation")
#}
<nav class="post-navigation" aria-label="{{ navLabel }}">
    {% set previousItem = collection | getPreviousCollectionItem(currentPage) %}
    {% set nextItem = collection | getNextCollectionItem(currentPage) %}
    {% if previousItem %}
    <a href="{{ previousItem.url }}" class="prev">← Previous {{ itemLabel }}: {{ previousItem.data.title | smartquotes | stripHtml }}</a>
    {% endif %}

    {% if nextItem %}
    <a href="{{ nextItem.url }}" class="next">Next {{ itemLabel }}: {{ nextItem.data.title | smartquotes | stripHtml }} →</a>
    {% endif %}
</nav>
