{# purpose: full blog post content component #}
<article>
    <header>
        <h1><a href="{{ post.url }}" rel="bookmark">{{ post.data.title | smartquotes | stripHtml }}</a></h1>
    </header>
    <section>
        {{ post.templateContent | safe }}
    </section>
    <footer>
        <p class="posted-on"><time datetime="{{ post.date }}">{{ post.date | postDate }}</time></p>
    </footer>
</article>
