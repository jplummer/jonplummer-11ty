---
permalink: /sitemap.xml
eleventyExcludeFromCollections: true
---
<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">
  {# Homepage #}
  <url>
    <loc>https://jonplummer.com/</loc>
    <lastmod>{{ collections.post | getNewestCollectionItemDate | dateToRfc3339 }}</lastmod>
    <changefreq>weekly</changefreq>
    <priority>1.0</priority>
  </url>

  {# Static pages (exclude error pages) #}
  {% for page in collections.page %}
  {% if page.data.purpose != "404" and page.data.purpose != "500" %}
  <url>
    <loc>https://jonplummer.com{{ page.url }}</loc>
    <lastmod>{{ page.date | dateToRfc3339 }}</lastmod>
    <changefreq>monthly</changefreq>
    <priority>0.8</priority>
  </url>
  {% endif %}
  {% endfor %}

  {# Portfolio page #}
  <url>
    <loc>https://jonplummer.com/portfolio/</loc>
    <lastmod>{{ collections.portfolio | getNewestCollectionItemDate | dateToRfc3339 }}</lastmod>
    <changefreq>monthly</changefreq>
    <priority>0.8</priority>
  </url>

  {# All blog posts #}
  {% for post in collections.post %}
  <url>
    <loc>https://jonplummer.com{{ post.url }}</loc>
    <lastmod>{{ post.date | dateToRfc3339 }}</lastmod>
    <changefreq>monthly</changefreq>
    <priority>0.6</priority>
  </url>
  {% endfor %}

  {# All portfolio items #}
  {% for item in collections.portfolio %}
  <url>
    <loc>https://jonplummer.com{{ item.url }}</loc>
    <lastmod>{{ item.date | dateToRfc3339 }}</lastmod>
    <changefreq>monthly</changefreq>
    <priority>0.7</priority>
  </url>
  {% endfor %}

  {# Pagination pages #}
  {% set totalPosts = collections.post | length %}
  {% set postsPerPage = 5 %}
  {% set totalPages = (totalPosts + postsPerPage - 1) // postsPerPage %}
  {% for pageNum in range(2, totalPages + 1) %}
  <url>
    <loc>https://jonplummer.com/page/{{ pageNum }}/</loc>
    <lastmod>{{ collections.post | getNewestCollectionItemDate | dateToRfc3339 }}</lastmod>
    <changefreq>weekly</changefreq>
    <priority>0.5</priority>
  </url>
  {% endfor %}
</urlset>
