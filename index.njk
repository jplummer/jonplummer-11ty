{% endfor %}

<nav class="pagination">
    {% if pagination.href.next %}
        <a class="prev" href="{{ pagination.href.next }}">← Older posts</a>
    {% endif %}
    {% if pagination.href.previous %}
        <a class="next" href="{{ pagination.href.previous }}">Newer posts →</a>
    {% endif %}
</nav>